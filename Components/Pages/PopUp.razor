@page "/PopUp"
@rendermode InteractiveServer

<PageTitle>Popup</PageTitle>

<div class="container mt-5">
    <h2 class="mb-4">Create a Custom Popup</h2>

    <div class="mb-3">
        <label for="titleInput" class="form-label">Modal Title</label>
        <input id="titleInput" class="form-control" @bind="modalTitle" placeholder="Enter a title..." />
    </div>

    <div class="mb-3">
        <label for="textInput" class="form-label">Modal Text</label>
        <input id="textInput" class="form-control" @bind="modalText" placeholder="Enter your message..." />
    </div>

    <button class="btn btn-primary" @onclick="ShowPopup">Open Popup</button>
</div>

@if (showPopup)
{
    <div class="modal-overlay">
        <div class="modal-box">
            <h4>@modalTitle</h4>
            <p>@modalText</p>
            <button class="btn btn-secondary mt-3" @onclick="ClosePopup">Close</button>
        </div>
    </div>
}

@code {
    private string modalTitle = "";
    private string modalText = "";
    private bool showPopup = false;

    private void ShowPopup() => showPopup = true;
    private void ClosePopup() => showPopup = false;
}
